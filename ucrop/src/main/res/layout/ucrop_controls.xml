    <RelativeLayout
        android:id="@+id/wrapper_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:background="@color/ucrop_color_black">

        <LinearLayout
            android:id="@+id/layout_aspect_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/aspect_ratio_wrapper"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/layout_rotate_wheel"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/image_view_state_aspect_ratio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ucrop_scale" />
        </FrameLayout>

        <include
            android:id="@+id/layout_rotate_wheel"
            layout="@layout/ucrop_layout_rotate_wheel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ucrop_height_wrapper_controls"
            android:layout_below="@id/layout_aspect_ratio"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/aspect_ratio_wrapper" />

        <!--<include-->
